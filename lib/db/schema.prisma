generator client {
  provider = "prisma-client"
  output = "../../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Day {
  id       Int       @id @default(autoincrement())
  date     String    @unique
  year     Int
  month    Int
  day      Int
  articles Article[]
  @@map("day")
}

model Article {
  id         Int      @id @default(autoincrement())
  dayId      Int
  language   String
  title      String
  content    String
  sources    Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  day Day @relation(fields: [dayId], references: [id], onDelete: Cascade)
  @@unique([dayId, language])
  @@map("articles")
}
