# Google Gemini API Key (required for article generation and translation fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini AI Models (optional - defaults shown below)
GEMINI_GENERATION_MODEL=gemini-2.5-flash
GEMINI_TRANSLATION_MODEL=gemini-2.5-flash

# DeepL API Key (optional - if not set, Gemini will be used for translation)
DEEPL_API_KEY=your_deepl_api_key_here

# DeepL API URL (optional - defaults to free tier)
# Use https://api.deepl.com/v2 for Pro tier
# Use https://api-free.deepl.com/v2 for Free tier (default)
DEEPL_API_URL=https://api-free.deepl.com/v2

# Database URL for Prisma
# For local development (SQLite)
DATABASE_URL=file:./dev.db

# For Docker with PostgreSQL (uncomment for Docker)
# DATABASE_URL=postgresql://dailywisdom:dailywisdom_password@postgres:5432/dailywisdom

# PostgreSQL Configuration (for Docker only)
POSTGRES_USER=dailywisdom
POSTGRES_PASSWORD=dailywisdom_password
POSTGRES_DB=dailywisdom

# i18n Configuration (optional)
# Default locale (defaults to 'en' if not set)
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Enable i18n debug logging in development (optional)
NEXT_PUBLIC_I18N_DEBUG=false

# Next.js Configuration (for Docker)
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# API Key to protect manual article generation endpoint
# Set this to a strong secret in production
# Example: GENERATE_ARTICLE_API_KEY=your_strong_key_here
# When set, requests to POST /api/generate-article must include either:
# - Authorization: Bearer <key>
# - X-Api-Key: <key>
